extends layout

block content
  h1 My Shopping Cart
    -var total = 0
    table.table
      thead
        th ProductCode
        th Name
        th Price
        th Actions
      hr
      tbody
        each item in cart 
          -total +=Number(item.Price)
          tr
            td=item.ProductCode
            td=item.Name
            td=item.Price
            td 
              a(href="/products/cart/remove/"+item._id,class="btn btn-danger btn-sm") Remove Item
      tfoot
        tr
          td Total
          td 
          td=total